# Environment Variables Example
# Copy this to .env for local development

# Application
NODE_ENV=development
APP_PORT=1337
PORT=1337

# Database
DATABASE_CLIENT=mysql
DATABASE_HOST=strapiDB
DATABASE_PORT=3306
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi_password

# Strapi Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))")
APP_KEYS=your-app-key-1,your-app-key-2,your-app-key-3,your-app-key-4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# Live Transfer (for pull-live script)
STRAPI_LIVE_URL=https://your-live-site.com/admin
STRAPI_LIVE_TOKEN=your-transfer-token-here
